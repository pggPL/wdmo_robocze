\begin{center}
&nbsp;&nbsp;\begin{tikzpicture}
    \tkzDefPoint(0,0){v_1}
    \tkzDefPoint(2,0){v_2}
    \tkzDrawPoints(v_1,v_2)
    \tkzDrawSegments(v_1,v_2)
&nbsp;&nbsp;\end{tikzpicture}\\
&nbsp;&nbsp;$G_1$
\end{center}
\end{minipage}
\begin{minipage}{0.33\textwidth}

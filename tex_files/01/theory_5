    \tkzDefPoint(2,2){v_3}
    \tkzDefPoint(0,2){v_4}
    \tkzDrawPoints(v_1,v_2, v_3, v_4)
    \tkzDrawSegments(v_1,v_2 v_2,v_3 v_3,v_4 v_1,v_4)
&nbsp;&nbsp;\end{tikzpicture}\\
&nbsp;&nbsp;$G_2$
\end{center}
\end{minipage}
